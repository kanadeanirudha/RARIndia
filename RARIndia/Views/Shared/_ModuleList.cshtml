@using RARIndia.Model;
@model UserModel
@{
    Layout= null;
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<li class="dropdown nav-item mega-dropdown d-none d-lg-block">
    <a class="dropdown-toggle nav-link" href="#" data-toggle="dropdown">@Model.SelectedModuleName</a>
    <ul class="mega-dropdown-menu dropdown-menu row p-1">
        <li class="col-md-12 px-2">
            <ul class="row mt-2">
                @foreach (UserModuleModel item in Model?.ModuleList)
                {
                    <li class="col-6 col-xl-2">
                        <a class="text-center mb-2 mb-xl-3" href="/user/GetMenuListByModuleCode?moduleCode=@item.ModuleCode&controllerName=@controllerName&method=List">
                            <i class="la la-shopping-cart font-large-1 mr-0"></i>
                            <p class="font-medium-1 mt-25 mb-0">@item.ModuleName</p>
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</li>