@using RARIndia.ViewModel
@model GeneralCountryListViewModel
@{
    Layout = null;
}
<div id="DataTablesDivId">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered column-rendering dataTable" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info" style="width: 1223px;">
                <thead>
                    <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="CountryName: activate to sort column descending" style="width: 45%;">Country Name</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" aria-label="CountryCode: activate to sort column ascending" style="width: 45%;">Country Code</th>
                        <th tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width:10%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model?.GeneralCountryList)
                    {
                        <tr>
                            <td>@item.CountryName</td>
                            <td>@item.CountryCode</td>
                            <td style="text-align:center">
                                <a href="../GeneralCountryMaster/Edit?countryId=@item.CountryId" title="Update"><i class="ft-edit-1"></i></a>  |
                                <a href="../GeneralCountryMaster/Delete?countryIds=@item.CountryId" title="Delete"><i class="ft-delete"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/Datatable/_DatatablePagination.cshtml", Model.PageListViewModel)
</div>
