@using RARIndia.ViewModel
@model GeneralCountryListViewModel
@{
    Layout = null;
    string actionName = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<div class="row">
    <div class="col-sm-12 col-md-6">
        @Html.Partial("~/Views/Shared/Datatable/_DatatableShowResult.cshtml", Model.PageListViewModel.RecordPerPage)
    </div>
    <div class="col-sm-12 col-md-6">
        @Html.Partial("~/Views/Shared/Datatable/_DatatableSearchData.cshtml", Model.PageListViewModel.SearchBy)
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered column-rendering dataTable" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info" style="width: 1223px;">
            <thead>
                <tr role="row">
                    <th class="sorting" data-columnname="CountryName" onclick="RARIndiaDataTable.LoadListSortBy('@controllerName','@actionName',this)">Country Name</th>
                    <th class="sorting" data-columnname="CountryCode">Country Code</th>
                    <th style="width:10%;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model?.GeneralCountryList)
                {
                    <tr>
                        <td>@item.CountryName</td>
                        <td>@item.CountryCode</td>
                        <td style="text-align:center">
                            <a href="../GeneralCountryMaster/Edit?countryId=@item.CountryId" title="Update"><i class="ft-edit-1"></i></a>  |
                            <a href="../GeneralCountryMaster/Delete?countryIds=@item.CountryId" title="Delete"><i class="ft-delete"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("~/Views/Shared/Datatable/_DatatablePagination.cshtml", Model.PageListViewModel)
