@using RARIndia.ViewModel
@model GeneralTaxMasterListViewModel
@{
    Layout = null;
    string actionName = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<div class="row">
    <div class="col-sm-12 col-md-6">
        @Html.Partial("~/Views/Shared/Datatable/_DatatableShowResult.cshtml", Model.PageListViewModel.RecordPerPage)
    </div>
    <div class="col-sm-12 col-md-6">
        @Html.Partial("~/Views/Shared/Datatable/_DatatableSearchData.cshtml", Model.PageListViewModel.SearchBy)
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered column-rendering dataTable" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info" style="width: 1223px;">
            <thead>
                <tr role="row">
                    <th class="sorting" data-columnname="TaxRate">Tax Name</th>
                    <th class="sorting" data-columnname="TaxName">Tax Rate</th>
                    <th class="sorting" data-columnname="IsOtherState">Is Other State</th>
                    <th style="width:10%;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model?.GeneralTaxMasterList)
                {
                    <tr>
                        <td>@item.TaxName</td>
                        <td>@item.TaxRate</td>
                        <td style="text-align:center;">
                            @if (item.IsOtherState)
                            {<i class="ft-check-circle grid-checked-icon"></i>}
                            else
                            { <i class="ft-x-circle grid-unchecked-icon"></i>}
                        </td>
                        <td style="text-align:center">
                            <a href="../@controllerName/Edit?TaxMasterId=@item.GeneralTaxMasterId" title="Update"><i class="ft-edit-1"></i></a>  |
                            <a href="../@controllerName/Delete?TaxMasterId=@item.GeneralTaxMasterId" title="Delete"><i class="ft-delete"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("~/Views/Shared/Datatable/_DatatablePagination.cshtml", Model.PageListViewModel)
