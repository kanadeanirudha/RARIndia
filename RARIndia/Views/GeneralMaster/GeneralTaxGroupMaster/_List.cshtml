@using RARIndia.ViewModel
@model GeneralTaxGroupMasterListViewModel
@{
    Layout = null;
    string actionName = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<div class="row">
    <div class="col-sm-12 col-md-6">
        @Html.Partial("~/Views/Shared/Datatable/_DatatableShowResult.cshtml", Model.PageListViewModel.RecordPerPage)
    </div>
    <div class="col-sm-12 col-md-6">
        @Html.Partial("~/Views/Shared/Datatable/_DatatableSearchData.cshtml", Model.PageListViewModel.SearchBy)
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered column-rendering dataTable" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info" style="width: 1223px;">
            <thead>
                <tr role="row">
                    <th class="sorting" data-columnname="TaxGroupName">Tax Group Name</th>
                    <th class="sorting" data-columnname="TaxGroupRate">Tax Group Rate</th>
                    <th style="width:10%;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model?.GeneralTaxGroupMasterList)
                {
                    <tr>
                        <td>@item.TaxGroupName</td>
                        <td>@item.TaxGroupRate</td>
                        <td style="text-align:center">
                            @* <a href="../@controllerName/Edit?TaxGroupMasterId=@item.GeneralTaxGroupMasterId" title="Update"><i class="ft-edit-1"></i></a> *@
                            <a href="../@controllerName/Edit?TaxGroupMasterId=@item.GeneralTaxGroupMasterId&selectedTaxGroupRate=@Model.GeneralTaxGroupMasterList" title="Update"><i class="ft-edit-1"></i></a>|
                            <a href="../@controllerName/Delete?TaxGroupMasterIds=@item.GeneralTaxGroupMasterId" title="Delete"><i class="ft-delete"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("~/Views/Shared/Datatable/_DatatablePagination.cshtml", Model.PageListViewModel)
